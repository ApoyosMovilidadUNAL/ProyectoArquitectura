<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
<mapper namespace="Cliente">
	<select id="consultarClientePorId" resultType="Cliente" parameterType="java.lang.Integer">
		select * from HT_CLIENTE where ID = #{id} ;
	</select>
	
	<insert id="agregarCliente" parameterType="java.lang.Integer">
		insert into HT_CLIENTE(HT_PERSONA_ID) values(#{ht_persona_id});
	</insert>
	
	<select id="consultarClientes" resultType="Persona" parameterType="java.lang.Integer">
		select ht_persona.ID, 
				ht_persona.NOMBRE, 
				ht_persona.APELLIDO,
				ht_persona.CORREO,
				ht_persona.IDENTIFICACION
		from dbhogar.ht_cliente,dbhogar.ht_persona 
		where dbhogar.ht_cliente.HT_PERSONA_ID = dbhogar.ht_persona.ID;
	</select>
</mapper>